{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2020"],
    "paths": {
      "*": ["src/types/*"]
    },
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
